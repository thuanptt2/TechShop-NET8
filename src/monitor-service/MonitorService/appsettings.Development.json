{
  "ConnectionStrings": {
    "TechShopDB": "Server=.;Database=TechShop;Trusted_Connection=True;TrustServerCertificate=True;"
  },
  "MongoDB": {
    "ConnectionString": "mongodb://root:example@localhost:27017",
    "DatabaseName": "TechShop"
  },
  "ProductService": {
    "Url": "https://localhost:7042"
  },
  "HealthChecksUI": {
